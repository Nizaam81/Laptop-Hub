
    <title>Coupon Management</title>
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
    background-color: #ffffff;
    margin: 0;
    padding: 0;
   
}
        .container {
            width: 90%;
            max-width: 600px;
            margin: 20px auto;
            animation: fadeIn 1s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        h2 {
            color: #006CE1;
            text-align: center;
            margin-bottom: 20px;
        }
        .form-container, .table-container {
            background: #f5f5f5;
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 10px;
        }
        label {
            font-weight: bold;
            color: #006CE1;
            display: block;
        }
        input {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 5px;
            transition: all 0.3s ease-in-out;
        }
        input:focus {
            border-color: #006CE1;
            box-shadow: 0 0 5px rgba(0, 108, 225, 0.5);
            outline: none;
        }.main-content {
    padding-top: 20px; 
}
        .add-btn {
            background-color: #006CE1;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            transition: transform 0.2s;
        }
        .add-btn:hover {
            transform: scale(1.05);
        }
        .table {
            width: 100%;
            border-collapse: collapse;
        }
        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
            font-size: 12px;
        }
        .table th {
            background-color: #006CE1;
            color: white;
        }
        .status {
            color: white;
            background-color: green;
            padding: 5px;
            border-radius: 5px;
            display: inline-block;
            font-size: 12px;
        }
        .delete-btn {
            background-color: red;
            color: white;
            border: none;
            padding: 5px;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s;
        }.edit-btn{
 background-color: rgb(57, 17, 151);
            color: white;
            border: none;
            padding: 5px;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s;
        }
        .delete-btn:hover {
            transform: scale(1.1);
        }.block-btn {
  background-color: #ff5722;
  color: white;
  border: none;
  padding: 5px;
  border-radius: 5px;
  cursor: pointer;
}

.unblock-btn {
  background-color: #4CAF50;
  color: white;
  border: none;
  padding: 5px;
  border-radius: 5px;
  cursor: pointer;
}
        @media (max-width: 600px) {
            .container {
                width: 95%;
            }
            .table th, .table td {
                font-size: 10px;
                padding: 6px;
            }
            .add-btn {
                font-size: 14px;
                padding: 8px;
            }
        }
    </style>
</head>
<body>
    <%- include("partials/header.ejs") %>
    
      <div class="container">
       
        <h2>Coupon Management</h2>
        <div class="form-container">
             <form id="couponForm" >
             <div class="form-group">
                <label>Coupon Name</label>
                <input type="text" placeholder="Enter coupon name" id="couponName">
            </div>
            <div class="form-group">
                <label>Start Date</label>
                <input type="date" id="couponDate">
            </div>
            <div class="form-group">
                <label>End Date</label>
                <input type="date" id="couponEndDate">
            </div>
            <div class="form-group">
                <label>Offer Price</label>
                <input type="number" placeholder="Enter offer price" id="offerPrice">
            </div>
            <div class="form-group">
                <label>Minimum Price</label>
                <input type="number" placeholder="Enter minimum price" id="minimumPrice">
            </div>
            <button class="add-btn" type="submit">ADD COUPON</button>
             </form>
        </div>
       
        <div class="table-container">
            <table class="table">
             
                <tr>
                    <th>Name</th>
                    <th>Created On</th>
                    <th>Expire On</th>
                    <th>Offer Price</th>
                    <th>Minimum Price</th>
                    <th>Status</th>
                    <th>Action</th>
                  <!-- <th>Edit</th> -->
                </tr>
                     <% Coupons.forEach(element => { %>
                <tr>
                  
                      <td><%= element.name %></td>
                  <td><%= new Date(element.createdOn).toLocaleDateString('en-GB') %></td>
                   <td><%= new Date(element.expireOn).toLocaleDateString('en-GB') %></td>

                    <td>₹ <%= element.offerPrice %></td>
                    <td>₹ <%= element.minimumPrice %></td>
                    <td>
  <% if (element.isList) { %>
    <span class="status" style="background-color: green;">Active</span>
  <% } else { %>
    <span class="status" style="background-color: red;">Blocked</span>
  <% } %>
</td>
                    <td><button 
  class="<%= element.isList ? 'unblock-btn' : 'block-btn' %>"
  onclick="toggleBlock('<%= element._id %>')"
>
  <%= element.isList ? 'Unblock' : 'Block' %>
</button>
                     <!-- <td><button class="delete-btn">Edit</button></td> -->
                  
                   <% }) %>  
                </tr>
               
            </table>
        </div>
    </div>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
</body>
<script>

document.getElementById("couponForm").addEventListener("submit", async (event) => {
    event.preventDefault();

    const coupon = document.getElementById("couponName").value.trim();
    const date = document.getElementById("couponDate").value.trim();
    const endDate = document.getElementById("couponEndDate").value.trim();
    const offer = document.getElementById("offerPrice").value.trim();
    const minimum = document.getElementById("minimumPrice").value.trim();

 
    if (!coupon || !date || !endDate || !offer || !minimum) {
        showToast("Please fill all fields", "error");
        return;
    }

    try {
        const response = await fetch("/admin/add-coupon", { 
            method: "POST", 
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ 
                couponName: coupon,
                startDate: date,
                endDate: endDate,
                offerPrice: offer,
                minimumPrice: minimum
            }),
        });

        const result = await response.json(); 

        if (response.ok) {
            showToast("Coupon added successfully!", "success");
            setTimeout(() => location.reload(), 2000);
        } else {
            showToast(result.message || "Failed to add coupon", "error");
        }
    } catch (error) {
        console.error("Error:", error);
        showToast("An error occurred while adding the coupon.", "error");
    }
});

function showToast(message, type) {
    Toastify({
        text: message,
        duration: 3000,
        close: true,
        gravity: "top", 
        position: "right", 
        backgroundColor: type === "success" ? "green" : "red",
    }).showToast();
}

 async function toggleBlock(CouponId) {
    try {
       
        const response = await fetch('/admin/coupon/toggle-block', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ CouponId }) 
        });

        const data = await response.json();
        
        if (data.success) {
            showToast("Coupon status updated successfully!", "success");
            setTimeout(() => window.location.reload(), 2000);
        } else {
            showToast(data.message || "Failed to toggle coupon status", "error");
        }
    } catch (error) {
        console.error("Error toggling coupon status:", error);
        showToast("Failed to toggle coupon status. Please try again.", "error");
    }
}


function showToast(message, type) {
    Toastify({
        text: message,
        duration: 2000,
        close: true,
        gravity: "top", 
        position: "right", 
        backgroundColor: type === "success" ? "green" : "red",
    }).showToast();
}


</script>


</html>
