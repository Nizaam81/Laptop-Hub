<%- include("partials/header.ejs") %>


    <title>Order Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #ffffff;
            color: #FFF;
        }
        .container {
            max-width: 900px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            color: black;
            margin-left: 285px;
            margin-top: 50px;
        }
        .search-box {
            margin-bottom: 20px;
            display: flex;
            gap: 10px;
        }
        .search-box input, .search-box select {
            padding: 8px;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        th {
            background-color: #006CE1;
            color: white;
        }
        .status {
            padding: 5px 10px;
            border-radius: 5px;
            font-weight: bold;
            display: inline-block;
            transition: all 0.3s ease;
            cursor: pointer;
            border: none;
        }
        .delivered { background: green; color: white; }
        .processing { background: yellow; color: black; }
        .onTheWay { background: gray; color: white; }
        .return { background: red; color: white; }
        .fade-in {
            animation: fadeIn 0.5s ease-in;
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
    <script>
       
    </script>
</head>
<body>
    <div class="container">
        <h2>Order Management</h2>
        <div class="search-box">
            <input type="text" placeholder="Search by Invoice Number...">
           
        </div>
        <table>
            <thead>
                <tr>
                  
                    <th>Invoice Number</th>
                    <th>Client Name</th>
                    <th>Product Name</th>
                    <th>Rate</th>
                    <th>Status</th>
                    <!-- <th>View</th> -->
                </tr>
            </thead>
          <% Order.forEach(element => { %>
            <tbody>
                <tr class="fade-in">
                   
                    <td><%= element._id %></td>
                    <td><%= element.userDetails[0].FirstName %><%= element.userDetails[0].LastName %></td>
                    <td><%= element.productDetails[0].name %></td>
                    <td><%= element.orderItem.price %></td>
                    <td>
                        <select class="status delivered" onchange="updateStatus(this)">
                            <option class="d-none"  selected><%= element.orderItem.status  %></option>
                             <% status.forEach(value => { %>
                                <option class="<%= value %>"><%= value %></option>
                             <% }) %>
                        </select>
                    </td>
                    <!-- <td><button>View</button></td> -->
                </tr>
          <% }) %>
               
        </table>
    </div>
</body>
</html>
