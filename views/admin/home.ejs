<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <style>
        /* Root variables for colors */
        :root {
            --white: #FFFFFF;
            --blue: #0866FF;
            --light-gray: #F3F3F3;
        }

        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: var(--light-gray);
            color: #333;
        }

        .container {
            display: flex;
            height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 250px;
            background-color: var(--white);
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .sidebar h1 {
            font-size: 24px;
            color: var(--blue);
            margin: 0 0 20px;
        }

        .menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .menu li {
            margin-bottom: 15px;
        }

        .menu a {
            text-decoration: none;
            color: #333;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 10px;
            border-radius: 8px;
            transition: background-color 0.3s, transform 0.3s;
        }

        .menu a img {
            width: 20px;
            height: 20px;
        }

        .menu a:hover {
            background-color: var(--light-gray);
            transform: scale(1.05);
        }

        .menu a.active {
            background-color: var(--blue);
            color: var(--white);
        }

        .logout {
            color: var(--blue);
            font-weight: bold;
        }

        /* Main Content */
        .main-content {
            flex-grow: 1;
            padding: 20px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header .search-bar {
            padding: 10px;
            border: 1px solid var(--light-gray);
            border-radius: 8px;
            width: 300px;
        }

        .overview {
            background-color: var(--white);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .overview h2 {
            margin: 0 0 20px;
        }

        .chart {
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            height: 200px;
        }

        .chart div {
            width: 40px;
            background-color: var(--blue);
            border-radius: 4px;
            transition: transform 0.3s;
        }

        .chart div:hover {
            transform: translateY(-10px);
            opacity: 0.8;
        }

        .stats {
            margin-top: 20px;
            display: flex;
            justify-content: space-around;
        }

        .stats .stat {
            background-color: var(--light-gray);
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            flex: 1;
            margin: 0 10px;
            transition: transform 0.3s;
        }

        .stats .stat:hover {
            transform: scale(1.05);
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Sidebar -->
        <aside class="sidebar">
            <h1>Laptop Hub</h1>
            <ul class="menu">
                <li><a href="#" data-name="Dashboard"><img src="path-to-your-image.png" alt="Dashboard Icon">Dashboard</a></li>
                <li><a href="#" data-name="Category"><img src="path-to-your-image.png" alt="Category Icon">Category</a></li>
                <li><a href="#" data-name="Products"><img src="path-to-your-image.png" alt="Products Icon">Products</a></li>
                <li><a href="#" data-name="Customers"><img src="path-to-your-image.png" alt="Customers Icon">Customers</a></li>
                <li><a href="#" data-name="Orders"><img src="path-to-your-image.png" alt="Orders Icon">Orders</a></li>
                <li><a href="#" data-name="Banner"><img src="path-to-your-image.png" alt="Banner Icon">Banner</a></li>
                <li><a href="#" data-name="Coupons"><img src="path-to-your-image.png" alt="Coupons Icon">Coupons</a></li>
                <li><a href="#" data-name="Settings"><img src="path-to-your-image.png" alt="Settings Icon">Settings</a></li>
                <li><a href="#" class="logout" data-name="Logout"><img src="path-to-your-image.png" alt="Logout Icon">Logout</a></li>
            </ul>
        </aside>

        <!-- Main Content -->
        <main class="main-content">
            <div class="header">
                <h2 id="page-title">Overview</h2>
                <input type="text" class="search-bar" placeholder="Search...">
            </div>

            <section class="overview">
                <h2>Total Revenue: $15,000</h2>
                <div class="chart">
                    <div style="height: 50%;"></div>
                    <div style="height: 70%;"></div>
                    <div style="height: 60%;"></div>
                    <div style="height: 80%;"></div>
                    <div style="height: 90%;"></div>
                </div>
                <div class="stats">
                    <div class="stat">Total Sales<br><strong>100,345</strong></div>
                    <div class="stat">Total Products<br><strong>500</strong></div>
                    <div class="stat">Orders<br><strong>96,771</strong></div>
                </div>
            </section>
        </main>
    </div>

    <script>
        // JavaScript for dynamic interactivity
        const menuLinks = document.querySelectorAll('.menu a');
        const pageTitle = document.getElementById('page-title');

        // Add click event listener to menu items
        menuLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                e.preventDefault();

                // Remove active class from all links
                menuLinks.forEach(item => item.classList.remove('active'));

                // Add active class to the clicked link
                link.classList.add('active');

                // Change page title dynamically
                const pageName = link.getAttribute('data-name');
                pageTitle.textContent = pageName;
            });
        });
    </script>
</body>
</html>
