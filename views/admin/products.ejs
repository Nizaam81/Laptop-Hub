<%- include("partials/header.ejs") %>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: #f4f4f4;
        }
        .main-content {
            max-width: 1200px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-left: 279px;
        }
        .search-bar {
            display: flex;
            justify-content: center;  
            margin-bottom: 20px;
        }
        .search-bar input {
            width: 50%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            background: white;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }
        th {
            background: #f4f4f4;
        }
        .btn {
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        .btn-add {
            background: #17a2b8;
            color: white;
        }
        .btn-block {
            background: #dc3545;
            color: white;
        }
        .btn-edit {
            background: #007bff;
            color: white;
        }.block, .unblock {
    color: white;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.block {
    background-color: green;
    color: white;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.unblock {
    background-color: red;
    color: white;
    padding: 5px 10px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

    </style>
</head>
<body>
    <div class="main-content">
        <h2>Products</h2>
        <div class="search-bar">
            <input type="text" placeholder="Search products or brands">
        </div>
        <table>
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Brand</th>
                    <th>Category</th>
                    <th>Regular Price</th>
                    <th>Sale Price</th>
                    <!-- <th>Offer</th> -->
                    <th>Quantity</th>
                    <th>Action</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
             <% for( let i = 0; i < products.length; i++ ) { %>
                <tr>
                    <td><%= products[i].name %></td>
                    <td><%= products[i].brandDetails[0].brandName %></td>
                    <td><%= products[i]. categoryDetails[0].name %></td>
                    <td><%= products[i].regularPrice %></td>
                    <td><%= products[i].salePrice %></td>
                    <!-- <td><button class="btn btn-add " >Add Offer</button></td> -->
                    <td><%= products[i].quantity %></td>
                    
                    <td class="actions">
                        <button  
                            id="product-btn-<%= products[i]._id %>"
                            class="<%= products[i].isBlocked ? 'unblock' : 'block' %>"
                            onclick="toggleProductBlock('<%= products[i]._id %>')"
                        >
                            <%= products[i].isBlocked ? 'Unblock' : 'Block' %>
                        </button> 
                    </td>
                    
                    
                    
                    <td><form action="/admin/edit-product"><button class="btn btn-edit" type="submit">
                        <input type="hidden" value="<%= products[i]._id %>" name="id">
                        Edit</button></form></td>

                </tr>
             <% } %>
            </tbody>
        </table>

       
    </div>

    <script>
        
        async function toggleProductBlock(productsId) {
    try {
        const response = await fetch('/admin/products/toggleProductBlock', {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ productsId })
        });

        const data = await response.json();
        
        if (data.success) {
            const button = document.getElementById(`product-btn-${productsId}`);
            if (button) {
                if (data.isBlocked) {
                    button.textContent = "Unblock";
                    button.style.backgroundColor = "red"; // Red for blocked state
                } else {
                    button.textContent = "Block";
                    button.style.backgroundColor = "green"; // Green for unblocked state
                }
            }
        } else {
            alert(data.message || 'Failed to toggle product status');
        }
    } catch (error) {
        console.error('Error toggling product status:', error);
        alert('Failed to toggle product status. Please try again.');
    }
}

    </script>
</body>

</html>
