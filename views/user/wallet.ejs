<%- include("partials/profileHeader.ejs") %>
    <title>Wallet UI</title>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f0f2f5;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 150vh;
            overflow-x: hidden; /* Prevents horizontal scrolling */
            overflow-y: auto; /* Allows vertical scrolling */
        }
        .container {
            max-width: 800px;
            width: 100%;
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease-in-out;
        }
        .balance-container {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .balance-box, .add-money-box {
            flex: 1;
            min-width: 300px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transform: translateY(-10px);
            animation: slideDown 1s ease-in-out forwards;
        }
        .balance-box h2 {
            font-size: 28px;
            margin: 10px 0;
        }
        .add-money-box input {
            width: 100%;
            padding: 12px;
            margin: 10px 0;
            border: none;
            border-radius: 8px;
            font-size: 16px;
        }
        .add-money-box button {
            width: 100%;
            padding: 12px;
            background: #ff5e57;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
            animation: pulse 1.5s infinite;
        }
        .add-money-box button:hover {
            background: #e74c3c;
        }
        .transaction-history {
            margin-top: 25px;
        }
        .transaction-history h2 {
            font-size: 24px;
            margin-bottom: 15px;
        }
        .transaction {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background: white;
            padding: 15px;
            margin: 8px 0;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
            opacity: 0;
            animation: fadeInUp 0.8s ease-in-out forwards;
        }
        .transaction:hover {
            transform: scale(1.05);
            background: #f7f7f7;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
            transition: 0.3s ease-in-out;
        }
        .transaction .status {
            color: green;
            font-weight: bold;
        }
        .transaction .amount {
            color: #27ae60;
            font-weight: bold;
            font-size: 18px;
        }#toast-container {
    position: fixed;
    top: 20px; /* Move to the top */
    right: 20px; /* Stay at the right */
    z-index: 1000;
}


.toast {
    background-color: #6F61C2;
    color: white;
    padding: 15px 20px;
    border-radius: 5px;
    margin: 5px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    min-width: 200px;
    max-width: 300px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    font-size: 16px;
    font-weight: bold;
}

.toast button {
    background: none;
    border: none;
    color: white;
    font-size: 18px;
    cursor: pointer;
    margin-left: 10px;
}

        @media (max-width: 768px) {
            .balance-container {
                flex-direction: column;
            }
            .container {
                padding: 15px;
            }
            .transaction {
                flex-direction: column;
                align-items: flex-start;
            }
        }
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        @keyframes slideDown {
            from { transform: translateY(-10px); opacity: 0; }
            to { transform: translateY(0); opacity: 1; }
        }
        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>
    <div id="toast-container"></div>

    <div class="container">
        <div class="balance-container">
            <div class="balance-box">
                <p>Current Balance</p>
                <h2>₹ <% if (walletData) { %>
                <%= walletData.totalBalance %>
                <% } else { %>
                 0.00
                <% } %> </h2>
               
            </div>
            <form id="addMoney">
            <div class="add-money-box">
                <p>Add Money</p>
                <input type="number  placeholder="Enter amount" id="amount">
                <button type="submit">Add Funds</button>
            </div>
        </form>
        </div>
        <div class="transaction-history">
            <h2>Transaction History</h2>
                
            <% if (walletData) { %>
                <% walletData.transactions.forEach(element => { %> 
                    <div class="transaction">
                    
                        <span><%= element.description %> <span class="status"><%= element.status %></span></span>
                        <span class="amount">₹ <%= element.amount %></span>
         
                     
                    
                       
                    </div>
                    <% }) %>
            <% } %>
            
        </div>
    </div>
</body>
</html>


<script>
 function showToast(message, type = "success") {
    const toastContainer = document.getElementById("toast-container");
    const toast = document.createElement("div");
    toast.className = `toast ${type}`;
    toast.innerHTML = `${message} <button onclick="this.parentElement.remove()">×</button>`;

    if (type === "error") {
        toast.style.backgroundColor = "#e74c3c"; 
    } else if (type === "success") {
        toast.style.backgroundColor = "#715AB8"; 
    }

    toastContainer.appendChild(toast);

    setTimeout(() => {
        toast.remove();
    }, 3000);
}

document.getElementById("addMoney").addEventListener("submit", async (event) => {
    event.preventDefault();

    const amount = document.getElementById("amount").value.trim();

    if (!amount || isNaN(amount) || amount <= 0) {
        showToast("Please enter a valid amount.", "error");
        return;
    }

    try {
        const response = await fetch("/user/Wallett", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ amount })
        });

        const result = await response.json();

        if (response.ok) {
            showToast("✅ Money added successfully!", "success");
            setTimeout(() => location.reload(), 2000);
        } else {
            showToast(result.message || "❌ Something went wrong!", "error");
        }
    } catch (error) {
        console.error("Error adding money:", error);
        showToast("❌ Failed to add money. Please try again later.", "error");
    }
});

</script>

    