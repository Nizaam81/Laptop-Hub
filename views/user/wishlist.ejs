  <%- include("partials/profileHeader.ejs") %>
    <title>Wishlist UI</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        background-color: #f9f9f9;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
      }

      .wishlist-wrapper {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        max-width: 1200px;
      }

      .wishlist-container {
        background-color: white;
        padding: 15px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        width: 280px; /* Fixed width */
        height: 400px; /* Fixed height */
        text-align: center;
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
      }

      .wishlist-container img {
        width: 100%;
        height: 200px; /* Uniform height */
        object-fit: cover; /* Ensures images fit properly */
        border-radius: 8px;
        transition: transform 0.3s ease-in-out;
      }

      .wishlist-container img:hover {
        transform: scale(1.05);
      }

      .delete-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: #c99c67;
        color: white;
        padding: 8px;
        border-radius: 50%;
        cursor: pointer;
        transition: transform 0.3s ease-in-out, background-color 0.3s;
      }

      .delete-icon:hover {
        transform: rotate(15deg) scale(1.1);
        background-color: #a07642;
      }

      .product-name {
        font-size: 18px;
        margin: 10px 0;
        font-weight: bold;
      }

      .price {
        font-size: 16px;
        color: gray;
      }

      .add-to-cart {
        display: inline-block;
        margin-top: 10px;
        padding: 10px 15px;
        background-color: black;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 14px;
        transition: transform 0.3s ease-in-out;
      }

      .add-to-cart:hover {
        transform: scale(1.1);
      }
    </style>
  </head>
  <body>
    <% if (wish.length==0) { %>
  <script>
    window.location.href = "/user/empty";
  </script>
<% } else { %>
  <div class="wishlist-wrapper">

      <% if (wish.length>0) { %>
       <% wish.forEach(product => { %>
        <div class="wishlist-container">
         <a href="#" onclick="event.preventDefault(); event.stopPropagation(); deleteWishlist('<%=wish[0]._id%>', '<%=product.products._id%>')">
               <div class="delete-icon">üóëÔ∏è</div></a>

          <img src="<%= product.products.productImage %>" alt="<%= product.products.productName %>" />
          <p class="product-name"><%= product.products.productName %></p>
          <p class="price"><%= product.products.Price %></p>
           <a href="#" class="add-to-cart" id="addToCartt">
            Add to Cart
          </a>
          <input type="hidden" id="varientId" value="<%=product.products.varientId  %>">
          <input type="hidden" id="productId" value="<%=product.products.productId  %>">
        </div>
      <% }) %>
      <% } %>
  </div>
<% } %>

  </body>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
   async function deleteWishlist(wishlistId, productId) {
    const result = await Swal.fire({
        title: 'Are you sure?',
        text: 'Do you want to remove this product from your wishlist?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#d33',
        cancelButtonColor: '#3085d6',
        confirmButtonText: 'Yes, remove it!'
    });

    if (!result.isConfirmed) {
        return;
    }

    try {
        const response = await fetch('/user/Wishlist/delete', {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
            body: JSON.stringify({ wishlistId, productId })
        });

        const data = await response.json();

        if (data.success) {
            Swal.fire({
                icon: 'success',
                title: 'Removed!',
                text: 'Product removed from wishlist',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 2000
            });

            setTimeout(() => {
                window.location.reload();
            }, 2000);
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: data.message || 'Failed to remove product from wishlist',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 2000
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'An error occurred!',
            text: 'Please try again.',
            toast: true,
            position: 'top-end',
            showConfirmButton: false,
            timer: 2000
        });
    }
}
document.getElementById("addToCartt").addEventListener("click", async function(event){
    event.preventDefault(); 

    const productId = document.getElementById("productId").value;
    const varientId = document.getElementById("varientId").value;
    const quantities = 1;
    


    try {
        const response = await fetch("/user/wishlit-addtocart", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ productId, varientId, quantities }) 
        });

        const data = await response.json();
       console.log(data)
        if (data.success) {
            Swal.fire({
                title: "Success",
                text: data.success,
                icon: "success",
            }).then(()=>{
                  window.location.reload()
            })
            
        } else if (data.existingCartItem) {
            Swal.fire({ 
                title: "Item Already in Cart",
                text: data.existingCartItem,
                icon: "warning",
            });
        } else if (data.variantDetails) {
            Swal.fire({
                title: "Variant Not Found",
                text: data.variantDetails,
                icon: "error",
            });
        } else {
            Swal.fire({
                title: "Error",
                text: "Something went wrong!",
                icon: "error",
            });
        }
    } catch (error) {
        console.error("Error:", error);
        Swal.fire({
            title: "Error",
            text: "Failed to add item to cart!",
            icon: "error",
        });
    }
});

  </script>
