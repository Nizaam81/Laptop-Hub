<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        /* Updated Color Theme */
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4; /* Light gray background */
            font-family: Arial, sans-serif;
        }

        .container {
            background: #ffffff; /* White background */
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 320px;
            border: 2px solid #1E3A8A; /* Blue border */
        }

        label {
            display: block;
            font-size: 14px;
            margin: 10px 0 5px;
            font-weight: bold;
            color: black;
            text-align: left;
        }

        .password-container {
            display: flex;
            align-items: center;
            border: 1px solid #1E3A8A; /* Blue border */
            border-radius: 5px;
            padding: 5px;
            justify-content: space-between;
        }

        input {
            width: 100%;
            border: none;
            padding: 8px;
            outline: none;
            font-size: 14px;
            background: none;
        }

        .toggle-icon {
            cursor: pointer;
            font-size: 16px;
            padding: 5px;
        }

        button {
            background: #1E3A8A; /* Blue button */
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 15px;
            font-size: 14px;
            width: 100%;
        }

        button:hover {
            background: #1E40AF; /* Darker blue */
        }
    </style>
    <script>
        // JavaScript for toggling password visibility
        function togglePassword(id) {
            let input = document.getElementById(id);
            let icon = document.getElementById(id + "-icon");
            if (input.type === "password") {
                input.type = "text";
                icon.textContent = "üôà"; // Hide icon
            } else {
                input.type = "password";
                icon.textContent = "üëÅÔ∏è"; // Show icon
            }
        }
    </script>
</head>
<body>
    <div class="container">
        <form id="setNewPassword">
            <label for="new-password">Set your New password</label>
            <div class="password-container">
                <input type="password" id="new-password" required>
                <span class="toggle-icon" id="new-password-icon" onclick="togglePassword('new-password')">üëÅÔ∏è</span>
            </div>

            <label for="confirm-password">Confirm password</label>
            <div class="password-container">
                <input type="password" id="confirm-password" required>
                <span class="toggle-icon" id="confirm-password-icon" onclick="togglePassword('confirm-password')">üëÅÔ∏è</span>
            </div>

            <button type="submit">Submit</button>
        </form>
    </div>
</body>
<script>
document.getElementById("setNewPassword").addEventListener("submit", async (event) => {
    event.preventDefault();

    const newPassword = document.getElementById("new-password").value.trim();
    const Cpassword = document.getElementById("confirm-password").value.trim();

    try {
        const response = await fetch("/user/resetpassword", {
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            },
            body: JSON.stringify({ newPassword: newPassword, confirmPassword: Cpassword })
        });

        const result = await response.json();

        if (response.ok) {
            Swal.fire({
                icon: "success",
                title: "Success!",
                text: "Password reset successful!",
                confirmButtonText: "OK"
            }).then(() => {
                window.location.href = "/user/login"; // Redirect after user clicks OK
            });
        } else {
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: result.message || "Something went wrong!",
            });
        }
    } catch (error) {
        Swal.fire({
            icon: "error",
            title: "Error",
            text: "Something went wrong! Please try again later.",
        });
    }
});


</script>
</html>
