<%- include("partials/profileHeader.ejs") %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Profile - Personal Information</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: "Poppins", sans-serif;
      }

      body {
        background: #f8f9fa;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
        animation: fadeIn 1s ease-in-out;
      }

      .profile-form-container {
        width: 100%;
        max-width: 450px;
        background: white;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        padding: 30px;
        text-align: center;
        animation: slideUp 0.8s ease-in-out;
        margin-right: 550px;
      }

      .form-title {
        font-size: 26px;
        font-weight: 700;
        margin-bottom: 20px;
        color: #333;
        position: relative;
      }

      .form-title::after {
        content: "";
        width: 60px;
        height: 3px;
        background: #1a73e8;
        display: block;
        margin: 8px auto 0;
        border-radius: 2px;
      }

      .form-group {
        text-align: left;
        margin-bottom: 15px;
        animation: fadeIn 1.2s ease-in-out;
      }

      .form-group label {
        display: block;
        font-size: 14px;
        font-weight: 600;
        color: #555;
        margin-bottom: 5px;
      }

      .form-control {
        width: 100%;
        padding: 12px;
        border: 2px solid #ddd;
        border-radius: 6px;
        font-size: 16px;
        transition: all 0.3s ease-in-out;
        background: #fff;
      }

      .form-control:focus {
        border-color: #1a73e8;
        outline: none;
        box-shadow: 0 0 5px rgba(26, 115, 232, 0.3);
        animation: bounce 0.3s ease-in-out;
      }

      .btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 16px;
        font-weight: 600;
        transition: all 0.3s;
        background: #1a73e8;
        color: white;
      }

      .btn:hover {
        background: #1557b0;
        transform: scale(1.05);
        animation: pulse 0.5s ease-in-out infinite alternate;
      }

      /* Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes slideUp {
        from {
          transform: translateY(50px);
          opacity: 0;
        }
        to {
          transform: translateY(0);
          opacity: 1;
        }
      }

      @keyframes bounce {
        0% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.05);
        }
        100% {
          transform: scale(1);
        }
      }

      @keyframes pulse {
        0% {
          transform: scale(1);
        }
        100% {
          transform: scale(1.02);
        }
      }

      /* Responsive */
      @media (max-width: 768px) {
        .profile-form-container {
          max-width: 100%;
          padding: 25px;
        }
      }

      @media (max-width: 480px) {
        .form-title {
          font-size: 22px;
        }

        .btn {
          font-size: 14px;
        }
      }
    </style>
  </head>
  <body>
    <div class="profile-form-container">
      <h2 class="form-title">Personal Information</h2>
      <form>
        <div class="form-group">
          <label for="firstName">First Name</label>
          <input 
          readonly
            type="text"
            id="firstName"
            class="form-control"
            placeholder="Enter your first name"
            value="<%= userData.FirstName %>"
          />
        </div>
        <div class="form-group">
          <label for="lastName">Last Name</label>
          <input
          readonly
            type="text"
            id="lastName"
            class="form-control"
            placeholder="Enter your last name"
            value="<%= userData.LastName %>"
          />
        </div>
        <div class="form-group">
          <label for="phone">Phone Number</label>
          <input
          readonly
            type="tel"
            id="phone"
            class="form-control"
            placeholder="Enter your phone number"
            value="+91 <%= userData.phone %>"
          />
        </div>
      <button type="button" class="btn" onclick="window.location.href='/user/editProfile'">
        Edit Personal Information
   </button>

      </form>
    </div>
  </body>
</html>
