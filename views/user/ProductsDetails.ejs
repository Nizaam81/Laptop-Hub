
<%- include('partials/head') %>
    
<%- include('partials/header') %> 
<div class="container">
    <main class="product-store position-relative padding-large no-padding-top">
      <div class="row">
        <div class="display-header d-flex justify-content-between pb-3">
          <h2 class="display-7 text-dark text-uppercase">Product Details</h2>
          <div class="btn-right">
            <a href="shop.html" class="btn btn-medium btn-normal text-uppercase">Go to Shop</a>
          </div>
        </div>
      </div>
      <div class="row">
        <!-- Product 1 -->
        <% Products.forEach(element => { %>
            <div class="col-md-3">
                <div class="product-card position-relative">
                  <div class="image-holder">
                    <img src="<%= element.images[0] %>" alt="CHUWI HeroBook Pro" class="img-fluid">
                    <span class="badge badge-success position-absolute">New</span>
                  </div>
                  <div class="cart-concern position-absolute">
                    <div class="cart-button d-flex">
                      <a href="/user/productView" class="btn btn-medium btn-black">shop Now<svg class="cart-outline"><use xlink:href="#cart-outline"></use></svg></a>
                    </div>
                  </div>
                  <div class="card-detail d-flex justify-content-between align-items-baseline pt-3">
                    <h3 class="card-title text-uppercase">
                      <a href="#"><%= element.name %></a>
                    </h3>
                    <span class="item-price text-primary"><%= element.salePrice %></span>
                  </div>
                  <p><%= element.description %></p>
                </div>
              </div>
         
        <% }) %>
        
       
      </div>
    </main>
  </div>

<%- include('partials/footer') %>