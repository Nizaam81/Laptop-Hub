<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="/styles.css">
</head>
<%- include('partials/header') %> 
    
<div class="container mt-4">
    <div class="product-container mb-3">
        <div class="sorting">
            <select class="form-select w-auto">
                <option>Popularity</option>
                <option>Price: Low to High</option>
                <option>Price: High to Low</option>
            </select>
        </div>
    </div>
    
    <div class="row">
        <% Products.forEach(element => { %>
          <div class="col-md-3 mb-4">
            <div class="card text-center p-2"> <!-- Centering content and adding padding -->
                <div class="wishlist-container text-end p-2"> <!-- Positioned wishlist icon -->
                    <span class="wishlist" onclick="toggleWishlist(this)">&#10084;</span>
                </div>
                <form action="/user/productView">
                    <button class="btn border-0 w-100"> <!-- Ensured button does not break layout -->
                        <img src="<%= element.images[0] %>" style="height: 150px; width:100%" class="card-img-top product-img" alt="Product Image">
                        <div class="card-body">
                            <input type="hidden" value="<%= element._id %>" name="productId">
                            <h5 class="card-title"><%= element.name%></h5>
                            <p class="card-text text-muted"><del><%= element.regularPrice %></del></p>
                            <p class="card-text text-danger fw-bold"><%= element.salePrice %></p>
                            <a href="#" class="btn btn-primary">View Details</a>
                        </div>
                    </button>
                </form>
            </div>
        </div>
        <% }) %>
    </div>
</div>

<style>
    .wishlist-container {
        position: absolute;
        right: 10px; /* Move to left by setting left: 10px */
        top: 10px;
    }
    .wishlist {
        font-size: 24px;
        color: grey;
        cursor: pointer;
    }
    .wishlist.active {
        color: red;
    }
</style>

<script>
    function toggleWishlist(element) {
        element.classList.toggle('active');
    }
</script>
</body>
</html>
