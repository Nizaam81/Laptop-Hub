<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up Page</title>
    <!-- SweetAlert CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- SweetAlert2 CSS (for styling) -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css"
    />

    <!-- SweetAlert2 JS (for functionality) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Font Awesome for the eye icon -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: Arial, sans-serif;
      }

      body {
        background-color: #f5f5f5;
        background-image: linear-gradient(
          135deg,
          rgba(0, 0, 0, 0.05) 0%,
          rgba(0, 0, 0, 0.1) 100%
        );
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 20px;
      }

      .container {
        background: white;
        border-radius: 30px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        width: 90%;
        max-width: 500px;
        overflow: hidden;
        padding: 30px;
        position: relative;
      }

      .header {
        text-align: center;
        margin-bottom: 25px;
      }

      .header h1 {
        font-size: 24px;
        color: #333;
        margin-bottom: 10px;
      }

      .header p {
        font-size: 14px;
        color: #666;
      }

      .form-group {
        margin-bottom: 15px;
        position: relative;
      }

      .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #333;
        font-size: 14px;
        font-weight: 500;
      }

      .form-group input {
        width: 100%;
        padding: 12px;
        border: 1px solid #ddd;
        border-radius: 15px;
        font-size: 14px;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
      }

      .form-group input:focus {
        outline: none;
        border-color: #2563eb;
        box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
      }

      .inline-inputs {
        display: flex;
        justify-content: space-between;
        gap: 15px;
      }

      .inline-inputs .form-group {
        width: 100%;
      }

      .toggle-password {
        position: absolute;
        right: 15px;
        top: 41px;
        cursor: pointer;
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
        transition: all 0.2s ease;
        opacity: 0.6;
        background-color: transparent;
        border-radius: 50%;
      }

      .toggle-password:hover {
        opacity: 1;
        background-color: rgba(37, 99, 235, 0.08);
      }

      .toggle-password i {
        font-size: 16px;
        color: #555;
        line-height: 1;
        display: block;
      }

      /* Style for showing active state */
      .toggle-password.active i {
        color: #2563eb;
      }

      .submit-btn {
        width: 100%;
        padding: 12px;
        background: #2563eb;
        color: white;
        border: none;
        border-radius: 15px;
        font-size: 16px;
        cursor: pointer;
        margin-bottom: 20px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(37, 99, 235, 0.2);
      }

      .submit-btn:hover {
        background: #1d4ed8;
        transform: translateY(-2px);
        box-shadow: 0 6px 8px rgba(37, 99, 235, 0.3);
      }

      .divider {
        text-align: center;
        margin: 20px 0;
        position: relative;
        color: #666;
      }

      .divider::before,
      .divider::after {
        content: "";
        position: absolute;
        top: 50%;
        width: 45%;
        height: 1px;
        background: rgba(0, 0, 0, 0.1);
      }

      .divider::before {
        left: 0;
      }

      .divider::after {
        right: 0;
      }

      .google-btn {
        width: 100%;
        padding: 12px;
        background: white;
        border: 1px solid #ddd;
        border-radius: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        font-size: 16px;
        font-weight: 600;
        color: #444;
        text-decoration: none;
        position: relative;
        overflow: hidden;
      }

      .google-btn svg {
        width: 22px;
        height: 22px;
        flex-shrink: 0;
      }

      .google-btn:hover {
        background: #f1f1f1;
        transform: translateY(-2px);
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.2);
      }

      /* Subtle animation effect on click */
      .google-btn:active {
        transform: scale(0.95);
      }

      /* Adding a slight gradient */
      .google-btn::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(
          135deg,
          rgba(255, 255, 255, 0.2),
          rgba(0, 0, 0, 0.05)
        );
        z-index: 0;
        border-radius: 50px;
      }

      .signin-link {
        text-align: center;
        font-size: 14px;
        color: #666;
        margin-top: 20px;
      }

      .signin-link a {
        color: #2563eb;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.3s ease;
      }

      .signin-link a:hover {
        color: #1d4ed8;
      }

      .error-message {
        color: red;
        font-size: 14px;
        margin-top: 5px;
        display: none;
        line-height: 1.5;
      }

      /* Alert styling */
      .alert {
        color: #d32f2f;
        font-weight: bold;
        padding: 12px;
        border-radius: 6px;
        background-color: #ffebee;
        width: 100%;
        text-align: center;
        margin-bottom: 15px;
        border: 1px solid #d32f2f;
      }

      @media (max-width: 768px) {
        .container {
          padding: 20px;
          width: 95%;
        }

        .inline-inputs {
          flex-direction: column;
          gap: 10px;
        }

        .google-btn {
          padding: 10px;
          font-size: 14px;
        }

        .google-btn svg {
          width: 18px;
          height: 18px;
        }
      }

      /* Fix for small mobile devices */
      @media (max-width: 480px) {
        .container {
          padding: 15px;
          border-radius: 20px;
        }

        .header h1 {
          font-size: 20px;
        }

        .form-group input {
          padding: 10px;
        }

        .submit-btn {
          padding: 10px;
          font-size: 14px;
        }

        .google-btn {
          padding: 8px;
          font-size: 13px;
          gap: 8px;
        }

        .google-btn svg {
          width: 16px;
          height: 16px;
        }
      }

      /* Ensure proper vertical spacing on very small screens */
      @media (max-height: 700px) {
        body {
          padding-top: 10px;
          padding-bottom: 10px;
          align-items: flex-start;
        }

        .container {
          margin-top: 10px;
          margin-bottom: 10px;
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1>Welcome!</h1>
        <p>Create your account to get started</p>
      </div>

      <form id="signUpForm" method="post" action="/user/signup">
        <div class="inline-inputs">
          <div class="form-group">
            <label for="firstName">First Name</label>
            <input
              type="text"
              id="firstName"
              placeholder="Enter your first name"
              name="Fname"
            />
            <div id="error1" class="error-message"></div>
          </div>
          <div class="form-group">
            <label for="lastName">Last Name</label>
            <input
              type="text"
              id="lastName"
              placeholder="Enter your last name"
              name="Lname"
            />
            <div id="error2" class="error-message"></div>
          </div>
        </div>

        <div class="form-group">
          <label for="phoneNumber">Phone Number</label>
          <input
            type="tel"
            id="phoneNumber"
            placeholder="Enter your phone number"
            name="phone"
          />
          <div id="error3" class="error-message"></div>
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            placeholder="Enter your email"
            name="email"
          />
          <div id="error4" class="error-message"></div>
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            placeholder="Enter your password"
            name="password"
          />
          <span class="toggle-password" id="togglePassword">
            <i class="fas fa-eye-slash"></i>
          </span>
          <div id="error5" class="error-message"></div>
        </div>

        <div class="form-group">
          <label for="confirmPassword">Confirm Password</label>
          <input
            type="password"
            id="confirmPassword"
            placeholder="Confirm your password"
            name="cpassword"
          />
          <span class="toggle-password" id="toggleConfirmPassword">
            <i class="fas fa-eye-slash"></i>
          </span>
          <div id="error6" class="error-message"></div>
        </div>

        <button type="submit" class="submit-btn" id="signup">Sign Up</button>

        <div class="divider">or</div>
        <a
          href="/user/auth/google"
          class="google-btn"
          aria-label="Continue with Google"
        >
          <svg
            width="20"
            height="20"
            viewBox="0 0 24 24"
            role="img"
            aria-hidden="true"
          >
            <title>Google Logo</title>
            <path
              fill="#4285F4"
              d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
            ></path>
            <path
              fill="#34A853"
              d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
            ></path>
            <path
              fill="#FBBC05"
              d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
            ></path>
            <path
              fill="#EA4335"
              d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
            ></path>
          </svg>
          <span>Continue with Google</span>
        </a>

        <div class="signin-link">
          Already have an account? <a href="login">Sign in</a>
        </div>
      </form>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const signUpForm = document.getElementById("signUpForm");
        const togglePassword = document.getElementById("togglePassword");
        const toggleConfirmPassword = document.getElementById(
          "toggleConfirmPassword"
        );
        const passwordInput = document.getElementById("password");
        const confirmPasswordInput = document.getElementById("confirmPassword");

        // Password toggle functionality for password field
        togglePassword.addEventListener("click", function () {
          // Toggle the type attribute
          const type =
            passwordInput.getAttribute("type") === "password"
              ? "text"
              : "password";
          passwordInput.setAttribute("type", type);

          // Toggle the eye / eye-slash icon
          this.querySelector("i").classList.toggle("fa-eye");
          this.querySelector("i").classList.toggle("fa-eye-slash");

          // Toggle active class for styling
          this.classList.toggle("active");
        });

        // Password toggle functionality for confirm password field
        toggleConfirmPassword.addEventListener("click", function () {
          // Toggle the type attribute
          const type =
            confirmPasswordInput.getAttribute("type") === "password"
              ? "text"
              : "password";
          confirmPasswordInput.setAttribute("type", type);

          // Toggle the eye / eye-slash icon
          this.querySelector("i").classList.toggle("fa-eye");
          this.querySelector("i").classList.toggle("fa-eye-slash");

          // Toggle active class for styling
          this.classList.toggle("active");
        });

        // Validation functions
        function showAlert(message) {
          Swal.fire({
            icon: "error",
            title: "Validation Error",
            text: message,
            confirmButtonText: "Okay",
          });
        }

        function hideErrorAfterDelay(element) {
          setTimeout(() => {
            element.style.display = "none";
          }, 3000); // Hide error after 3 seconds
        }

        function FnameValidateChecking() {
          const Fname = document.getElementById("firstName");
          const error1 = document.getElementById("error1");
          const nameval = Fname.value.trim();
          const namepattern = /^[A-Za-z]{3,}(?: [A-Za-z]+)*$/;

          if (nameval === "") {
            error1.style.display = "block";
            error1.innerHTML = "Please enter a valid first name.";
            hideErrorAfterDelay(error1);
            return false;
          } else if (!namepattern.test(nameval)) {
            error1.style.display = "block";
            error1.innerHTML = "First name can only contain alphabets.";
            hideErrorAfterDelay(error1);
            return false;
          }
          return true;
        }

        function LnameValidateChecking() {
          const Lname = document.getElementById("lastName");
          const error2 = document.getElementById("error2");
          const nameval = Lname.value.trim();
          const namepattern = /^[A-Za-z]{1,}(?: [A-Za-z]+)*$/;

          if (nameval === "") {
            error2.style.display = "block";
            error2.innerHTML = "Please enter a valid last name.";
            hideErrorAfterDelay(error2);
            return false;
          } else if (!namepattern.test(nameval)) {
            error2.style.display = "block";
            error2.innerHTML = "Last name can only contain alphabets.";
            hideErrorAfterDelay(error2);
            return false;
          }
          return true;
        }

        function PhoneValidateChecking() {
          const phone = document.getElementById("phoneNumber");
          const error3 = document.getElementById("error3");
          const phoneval = phone.value.trim();
          const phonePattern = /^[1-9][0-9]{9}$/;

          if (!phonePattern.test(phoneval)) {
            error3.style.display = "block";
            error3.innerHTML = "Enter a valid phone number.";
            hideErrorAfterDelay(error3);
            return false;
          }
          return true;
        }

        function emailValidateChecking() {
          const email = document.getElementById("email");
          const error4 = document.getElementById("error4");
          const emailval = email.value.trim();
          const emailPattern =
            /^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;

          if (!emailPattern.test(emailval)) {
            error4.style.display = "block";
            error4.innerHTML = "Invalid email format.";
            hideErrorAfterDelay(error4);
            return false;
          }
          return true;
        }

        function passwordValidateChecking() {
          const password = document.getElementById("password").value.trim();
          const error5 = document.getElementById("error5");
          const cpassword = document
            .getElementById("confirmPassword")
            .value.trim();
          const error6 = document.getElementById("error6");
          const passwordPattern =
            /^(?=.*[A-Z])(?=.*[a-z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

          if (!passwordPattern.test(password)) {
            error5.style.display = "block";
            error5.innerHTML =
              "Password must be at least 8 characters long, include an uppercase letter, a lowercase letter, a number, and a special character.";
            hideErrorAfterDelay(error5);
            return false;
          }

          if (password !== cpassword) {
            error6.style.display = "block";
            error6.innerHTML = "Passwords do not match.";
            hideErrorAfterDelay(error6);
            return false;
          }
          return true;
        }

        signUpForm.addEventListener("submit", function (e) {
          e.preventDefault();

          const isFnameValid = FnameValidateChecking();
          const isLnameValid = LnameValidateChecking();
          const isPhoneValid = PhoneValidateChecking();
          const isEmailValid = emailValidateChecking();
          const isPasswordValid = passwordValidateChecking();

          if (
            isFnameValid &&
            isLnameValid &&
            isPhoneValid &&
            isEmailValid &&
            isPasswordValid
          ) {
            Swal.fire({
              icon: "success",
              title: "Verify",
              text: "Verify Your Account!",
              confirmButtonText: "Okay",
            }).then(() => {
              signUpForm.submit();
            });
          }
        });
        const data = Response.json();

        function checkViewportSize() {
          if (window.matchMedia("(max-width: 768px)").matches) {
          }
        }

        checkViewportSize();

        window.addEventListener("resize", checkViewportSize);
      });
    </script>
  </body>
</html>
